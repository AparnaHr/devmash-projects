<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.happybirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bday"
        android:scaleType="centerCrop"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="To a Wonderful person"
        android:textColor="#AB47BC"
        android:textSize="26sp"
        android:paddingTop="12dp"
        android:textStyle="bold|italic"
        android:singleLine="false"
        android:id="@+id/hbd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="From Aparna"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textStyle="bold|italic"
        android:id="@+id/by"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignWithParentIfMissing="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click with smile ;)"
        android:id="@+id/button"
        android:layout_above="@+id/by"
        android:layout_alignStart="@+id/by"
        android:layout_alignLeft="@id/by"
        android:layout_toRightOf="@+id/imageView"
        android:textStyle="italic" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/one"
        android:paddingBottom="5dp"
        android:layout_alignLeft="@+id/by"
        android:layout_alignStart="@+id/by"
        android:id="@+id/ll"
        android:layout_above="@+id/button">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Make a wish"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="italic|bold"
            android:layout_alignParentRight="true"
            android:layout_below="@id/one"
            android:id="@+id/textView"
            android:gravity="center" />

        <ImageView
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wish"
            android:id="@+id/wish" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Paint your life"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/paint"
            android:id="@+id/paint" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:textSize="36sp"
        android:textColor="#ffffff"
        android:textStyle="italic|bold"
        android:layout_below="@id/hbd"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
